<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#fffafa"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloRecebido"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="196dp"
            android:layout_marginRight="196dp"
            android:text="@string/description"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="247dp"
            android:layout_marginRight="247dp"
            android:text="@string/tit"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/descricaoRecebida"
            android:layout_width="344dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:fontFamily="sans-serif-light"
            android:inputType="textAutoComplete"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tituloRecebido"
            android:layout_width="344dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:fontFamily="sans-serif-light"
            android:inputType="textAutoComplete"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descricaoRecebida"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="259dp"
            android:layout_marginRight="259dp"
            android:text="@string/image"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagemRecebida"
            android:layout_width="wrap_content"
            android:layout_height="153dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="322dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="-269dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_baseline_image_24" />

        <ImageButton
            android:id="@+id/add_photo"
            android:layout_width="90dp"
            android:layout_height="51dp"
            android:layout_alignBottom="@+id/imagemRecebida"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="145dp"
            android:layout_marginEnd="167dp"
            android:layout_marginRight="167dp"
            android:layout_marginBottom="-54dp"
            android:background="@null"
            android:onClick="chooseImage"
            android:src="@drawable/ic_baseline_add_a_photo_24" />

        <LinearLayout
            android:id="@+id/bottomBar2"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_below="@+id/imagemRecebida"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="91dp"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:layout_marginBottom="309dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/addOcorrencia"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_weight="20"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#1D88CB"
                android:text="@string/save"
                android:textColor="#FAFFFFFF"
                android:textStyle="bold"></Button>


        </LinearLayout>

        <Spinner
            android:id="@+id/ocorrenciaRecebida"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="214dp"
            android:layout_marginLeft="214dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descricaoRecebida"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="201dp"
            android:layout_marginRight="201dp"
            android:layout_marginBottom="207dp"
            android:text="@string/occurrence"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nomeImagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="159dp" />

    </RelativeLayout>
    </ScrollView>

</LinearLayout>