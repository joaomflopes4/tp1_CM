<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >

    <RelativeLayout
        android:layout_width="292dp"
        android:layout_height="249dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#fffafa"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo_info"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:text="descricao"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/utilizador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descricao"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text=""
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/imagem"
            android:layout_width="134dp"
            android:layout_height="62dp"
            android:layout_below="@+id/utilizador"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-36dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="193dp"
            android:layout_height="36dp"
            android:layout_below="@+id/utilizador"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/consultNote"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_weight="20"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#1D88CB"
                android:text="@string/delete"
                android:textColor="#FAFFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="A"
                android:visibility="invisible">

            </TextView>

            <Button
                android:id="@+id/AddNote"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="20"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#1D88CB"
                android:onClick="addNotas"
                android:text="@string/edit"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"></Button>

        </LinearLayout>

        <TextView
            android:id="@+id/tipoOcorrencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descricao"
            android:layout_alignBottom="@+id/utilizador"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="111dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="112dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="OcorrÃªncia"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>